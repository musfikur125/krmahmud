   "source": [
    "def digit_sum(x):\n",
    "    f=[]\n",
    "    d=0\n",
    "    a= str(x)\n",
    "    for i in a:\n",
    "        f.append( int(i))\n",
    "    for r in f:\n",
    "        d=d+r\n",
    "    return d\n",
    "digit_sum(9875)"
